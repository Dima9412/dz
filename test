# 1. Создание файлов с помощью команды cat
echo -e "Собаки\nКошки\nХомяки" > ДомашниеЖивотные.txt
echo -e "Лошади\nВерблюды\nОслы" > ВьючныеЖивотные.txt

# Объединение файлов
cat ДомашниеЖивотные.txt ВьючныеЖивотные.txt > ВсеЖивотные.txt

# Просмотр содержимого объединенного файла
cat ВсеЖивотные.txt

# Переименование файла
mv ВсеЖивотные.txt ДрузьяЧеловека.txt

# 2. Создание директории и перемещение файла
mkdir Питомник
mv ДрузьяЧеловека.txt Питомник/

# 3. Подключение репозитория MySQL и установка пакета
sudo add-apt-repository ppa:ondrej/php
sudo apt update
sudo apt install php-mysql

# 4. Установка и удаление deb-пакета с помощью dpkg
sudo dpkg -i имя_пакета.deb  # Установка пакета
sudo dpkg -r имя_пакета       # Удаление пакета

# 5. Выложить историю команд в терминале Ubuntu
history > история_команд.txt

# 6. Диаграмма классов (представлена текстово)
# Родительский класс: Животные
#   ├── Домашние животные
#   │     ├── Собаки
#   │     ├── Кошки
#   │     └── Хомяки
#   └── Вьючные животные
#         ├── Лошади
#         ├── Верблюды
#         └── Ослы

# 7. Создание базы данных в MySQL
mysql -u root -p -e "CREATE DATABASE ДрузьяЧеловека;"

# 8. Создание таблиц в БД (пример)
mysql -u root -p ДрузьяЧеловека -e "
CREATE TABLE Домашние (
    id INT AUTO_INCREMENT PRIMARY KEY,
    имя VARCHAR(50),
    команда VARCHAR(50),
    дата_рождения DATE
);
CREATE TABLE Вьючные (
    id INT AUTO_INCREMENT PRIMARY KEY,
    имя VARCHAR(50),
    команда VARCHAR(50),
    дата_рождения DATE
);"

# 9. Заполнение таблиц данными (пример)
mysql -u root -p ДрузьяЧеловека -e "
INSERT INTO Домашние (имя, команда, дата_рождения) VALUES ('Шарик', 'Сидеть', '2020-01-01');
INSERT INTO Вьючные (имя, команда, дата_рождения) VALUES ('Бурёнка', 'Идти', '2019-05-15');"

# 10. Удаление верблюдов и объединение таблиц лошадей и ослов (пример)
mysql -u root -p ДрузьяЧеловека -e "
DELETE FROM Вьючные WHERE имя = 'Верблюд';
CREATE TABLE Лошади_Ослы AS SELECT * FROM Вьючные WHERE команда IN ('Идти', 'Бежать');"

# 11. Создание таблицы "молодые животные"
mysql -u root -p ДрузьяЧеловека -e "
CREATE TABLE МолодыеЖивотные AS 
SELECT *, TIMESTAMPDIFF(YEAR, дата_рождения, CURDATE()) AS возраст 
FROM Домашние WHERE возраст > 1 AND возраст < 3;"

# 12. Объединение всех таблиц в одну с сохранением принадлежности (пример)
mysql -u root -p ДрузьяЧеловека -e "
CREATE TABLE ВсеЖивотные AS 
SELECT *, 'Домашние' AS тип FROM Домашние 
UNION ALL 
SELECT *, 'Вьючные' AS тип FROM Вьючные;"

# 13. Класс с инкапсуляцией методов и наследованием (пример на Python)
class Животное:
    def __init__(self, имя):
        self.__имя = имя

class ДомашнееЖивотное(Животное):
    def __init__(self, имя):
        super().__init__(имя)

class ВьючноеЖивотное(Животное):
    def __init__(self, имя):
        super().__init__(имя)

# 14. Программа для работы с реестром домашних животных (пример на Python)
class Реестр:
    def __init__(self):
        self.животные = []

    def завести_животное(self, имя):
        self.животные.append(имя)

    def показать_животных(self):
        return self.животные

реестр = Реестр()
реестр.zавести_животное("Шарик")
print(реестр.показать_животных())

# 15. Класс Счетчик с методом add()
class Счетчик:
    def __init__(self):
        self.__значение = 0

    def add(self):
        self.__значение += 1

try:
    счетчик = Счетчик()
    счетчик.add()
except Exception as e:
    print("Ошибка:", e)
